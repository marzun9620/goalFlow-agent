generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SkillLevel {
  BEGINNER
  JUNIOR
  INTERMEDIATE
  MID
  SENIOR
  EXPERT
  PRINCIPAL
}

enum SkillPriority {
  REQUIRED
  PREFERRED
  BONUS
}

enum AgentMessageRole {
  USER
  ASSISTANT
  SYSTEM
}

enum AgentRunStatus {
  PROPOSED
  APPROVED
  REJECTED
  EXECUTED
  FAILED
}

enum AgentActionStatus {
  PENDING
  SUCCESS
  FAILED
  SKIPPED
}

model Skill {
  id                  String               @id @default(uuid())
  name                String
  level               SkillLevel?
  years               Int?
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  personSkills        PersonSkill[]
  taskRequiredSkills  TaskRequiredSkill[]
}

model Person {
  id                String             @id @default(uuid())
  name              String
  role              String?
  timezone          String?
  weeklyCapacityHours Int?
  currentLoadHours  Int                @default(0)
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  skills            PersonSkill[]
  ownedTasks        Task[]             @relation("TaskOwner")
  assignments       TaskAssignment[]
  events            CalendarEvent[]
  goals             Goal[]
}

model PersonSkill {
  personId String
  skillId  String
  level    SkillLevel?
  years    Int?

  person Person @relation(fields: [personId], references: [id], onDelete: Cascade)
  skill  Skill  @relation(fields: [skillId], references: [id], onDelete: Cascade)

  @@id([personId, skillId])
}

model Task {
  id               String              @id @default(uuid())
  title            String
  description      String?
  priority         String?
  effortHours      Decimal?            @db.Decimal
  dueAt            DateTime?
  ownerId          String?
  sensitivityLevel String?
  createdAt        DateTime            @default(now())
  updatedAt        DateTime            @updatedAt

  owner           Person?             @relation("TaskOwner", fields: [ownerId], references: [id])
  requiredSkills  TaskRequiredSkill[]
  assignments     TaskAssignment[]
}

model TaskRequiredSkill {
  taskId        String
  skillId       String
  requiredLevel SkillLevel?
  priority      SkillPriority @default(REQUIRED)

  task  Task  @relation(fields: [taskId], references: [id], onDelete: Cascade)
  skill Skill @relation(fields: [skillId], references: [id], onDelete: Cascade)

  @@id([taskId, skillId])
}

model TaskAssignment {
  id              String   @id @default(uuid())
  taskId          String
  personId        String
  allocatedHours  Decimal? @db.Decimal
  status          String?
  createdAt       DateTime @default(now())

  task   Task   @relation(fields: [taskId], references: [id], onDelete: Cascade)
  person Person @relation(fields: [personId], references: [id], onDelete: Cascade)

  @@unique([taskId, personId])
}

model Goal {
  id         String   @id @default(uuid())
  ownerId    String?
  title      String
  milestones Json?
  targetDate DateTime? @db.Date
  status     String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  owner Person? @relation(fields: [ownerId], references: [id], onDelete: SetNull)
}

model CalendarEvent {
  id         String   @id @default(uuid())
  personId   String
  startAt    DateTime
  endAt      DateTime
  eventType  String?
  externalId String?
  source     String?
  createdAt  DateTime @default(now())

  person Person @relation(fields: [personId], references: [id], onDelete: Cascade)

  @@index([personId, startAt, endAt])
}

model Conversation {
  id        String                @id @default(uuid())
  title     String?
  createdAt DateTime              @default(now())
  updatedAt DateTime              @updatedAt
  messages  ConversationMessage[]
  runs      AgentRun[]
}

model ConversationMessage {
  id             String           @id @default(uuid())
  conversationId String
  role           AgentMessageRole
  content        String
  createdAt      DateTime         @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
}

model AgentRun {
  id             String         @id @default(uuid())
  conversationId String
  status         AgentRunStatus @default(PROPOSED)
  input          Json?
  proposal       Json?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  actions        AgentAction[]

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
}

model AgentAction {
  id        String            @id @default(uuid())
  runId     String
  type      String
  status    AgentActionStatus @default(PENDING)
  payload   Json?
  error     String?
  createdAt DateTime          @default(now())

  run AgentRun @relation(fields: [runId], references: [id], onDelete: Cascade)

  @@index([runId, createdAt])
}
