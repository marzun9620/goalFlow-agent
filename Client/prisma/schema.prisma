generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Skill {
  id                  String               @id @default(uuid())
  name                String
  level               String?
  years               Int?
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  personSkills        PersonSkill[]
  taskRequiredSkills  TaskRequiredSkill[]
}

model Person {
  id                String             @id @default(uuid())
  name              String
  role              String?
  timezone          String?
  weeklyCapacityHours Int?
  currentLoadHours  Int                @default(0)
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  skills            PersonSkill[]
  ownedTasks        Task[]             @relation("TaskOwner")
  assignments       TaskAssignment[]
  events            CalendarEvent[]
  goals             Goal[]
}

model PersonSkill {
  personId String
  skillId  String
  level    String?
  years    Int?

  person Person @relation(fields: [personId], references: [id], onDelete: Cascade)
  skill  Skill  @relation(fields: [skillId], references: [id], onDelete: Cascade)

  @@id([personId, skillId])
}

model Task {
  id               String              @id @default(uuid())
  title            String
  description      String?
  priority         String?
  effortHours      Decimal?            @db.Decimal
  dueAt            DateTime?
  ownerId          String?
  sensitivityLevel String?
  createdAt        DateTime            @default(now())
  updatedAt        DateTime            @updatedAt

  owner           Person?             @relation("TaskOwner", fields: [ownerId], references: [id])
  requiredSkills  TaskRequiredSkill[]
  assignments     TaskAssignment[]
}

model TaskRequiredSkill {
  taskId        String
  skillId       String
  requiredLevel String?

  task  Task  @relation(fields: [taskId], references: [id], onDelete: Cascade)
  skill Skill @relation(fields: [skillId], references: [id], onDelete: Cascade)

  @@id([taskId, skillId])
}

model TaskAssignment {
  id              String   @id @default(uuid())
  taskId          String
  personId        String
  allocatedHours  Decimal? @db.Decimal
  status          String?
  createdAt       DateTime @default(now())

  task   Task   @relation(fields: [taskId], references: [id], onDelete: Cascade)
  person Person @relation(fields: [personId], references: [id], onDelete: Cascade)

  @@unique([taskId, personId])
}

model Goal {
  id         String   @id @default(uuid())
  ownerId    String?
  title      String
  milestones Json?
  targetDate DateTime? @db.Date
  status     String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  owner Person? @relation(fields: [ownerId], references: [id], onDelete: SetNull)
}

model CalendarEvent {
  id         String   @id @default(uuid())
  personId   String
  startAt    DateTime
  endAt      DateTime
  eventType  String?
  externalId String?
  source     String?
  createdAt  DateTime @default(now())

  person Person @relation(fields: [personId], references: [id], onDelete: Cascade)

  @@index([personId, startAt, endAt])
}
